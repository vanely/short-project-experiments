# Frontend Environment Configuration
# =================================

# API Configuration
VITE_API_BASE_URL=http://localhost:3001
VITE_API_TIMEOUT=10000

# App Configuration
VITE_APP_TITLE=Todo App
VITE_APP_VERSION=1.0.0 

# Development Settings (set to false in production)
VITE_DEV_MODE=false
VITE_ENABLE_DEVTOOLS=false

# Docker Configuration
DOCKER_NETWORK_NAME=backend_todo-network
DOCKER_CONTAINER_NAME=todo-frontend
DOCKER_PORT=3000

# Security Configuration
DOCKER_USER=nginx
DOCKER_GROUP=nginx
DOCKER_UID=101
DOCKER_GID=101

# Resource Limits
DOCKER_CPU_LIMIT=0.5
DOCKER_MEMORY_LIMIT=512m
DOCKER_CPU_SHARES=512
DOCKER_MEMORY_RESERVATION=256m

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3
HEALTH_CHECK_START_PERIOD=30s

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Production Settings
NODE_ENV=production
VITE_APP_ENV=production
VITE_APP_VERSION=1.0.0

# Security Headers (additional)
VITE_CSP_NONCE=
VITE_HSTS_MAX_AGE=31536000
VITE_CONTENT_SECURITY_POLICY="default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline';"

# Monitoring
VITE_ENABLE_METRICS=true
VITE_METRICS_ENDPOINT=/metrics 